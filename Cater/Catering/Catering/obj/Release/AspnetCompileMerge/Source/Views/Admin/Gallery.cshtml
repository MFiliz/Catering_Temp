<script>
    function Sil(id) {

        var r = confirm("Resim Silinecektir!");
        if (r == true) {
            $.get("/Admin/ResimSil?Id=" + id, function(resp) {
                window.location.href="/Admin/Gallery";  
            });
        } 
    };
</script>