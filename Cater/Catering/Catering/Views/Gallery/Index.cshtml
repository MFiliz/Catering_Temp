@model List<string>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Master.cshtml";
}
<div id="tm-main" class="tm-block-main uk-block uk-block-default">
    <div class="uk-container uk-container-center">
        <div class="tm-middle uk-grid" data-uk-grid-match data-uk-grid-margin>
            <div class="tm-main uk-width-medium-1-1">
                <main id="tm-content" class="tm-content">
                    <article class="uk-article tm-article">
                        <div class="tm-article-wrapper">
                            <h1 class="uk-article-title">Galeri</h1>
                            <div class="tm-article-content uk-margin-large-bottom uk-margin-top-remove">
                                <div class="tm-article">
                                    <div class="uk-grid uk-grid-width-medium-1-2 uk-grid-width-large-1-4" data-uk-grid-margin>
                                        <!-- lightbox image -->

                                        @foreach (var item in Model)
                                        {
                                            <div>
                                                <a href="@Url.Content("~/images/demo/gallery/" + item)" data-uk-lightbox="{group:'gallery1'}" style="max-height: 100px; max-width: 100px; min-height: 100px; min-width: 100px;" >
                                                    <figure class="uk-overlay uk-overlay-hover">
                                                        <img class="uk-overlay-scale" src="@Url.Content("~/images/demo/gallery/" + item)" alt="image" width="800" height="800" style="max-height: 250px; max-width: 250px; min-height: 250px; min-width: 250px;" >
                                                        <div class="uk-overlay-panel uk-overlay-background uk-overlay-fade uk-overlay-icon"></div>
                                                    </figure>
                                                </a>
                                            </div>
                                        }
                                       
                                 
                                    </div>
                              
                                </div>
                            </div>
                        </div>
                    </article>
                </main>
            </div>
        </div>
    </div>
</div>
